body
	font-family $font-family
	color $color-dark
	font-size $font-size
	line-height $line-height

a
	text-decoration none
	color $color-blue-lt
	transition color .075s

	&:hover
		color $color-blue-dk

hr
	border-color $color-gray-lt
	margin $default-spacing-unit 0

.grid-demo
	.grid>div
		border 1px solid $color-gray-lt
		border-radius $border-radius
		box-sizing border-box
		text-align center
		line-height 40px
		height 40px
		color $color-gray-lt - 20

.limiter
	width 940px
	margin 0 auto
	padding-left 30px
	padding-right 30px

	+below($below-handheld)
		width 90%
		padding-left 5%
		padding-right 5%

.header
	padding 65px 0 20px
	margin-bottom 80px
	position relative

	&:after
		background-color $color-gray-lt
		content ''
		display block
		height 2px
		position absolute
		bottom 0
		left 0
		width 100%

	h1
		font-size 60px
		font-weight 100

.block
	margin-bottom $default-spacing-unit * 2

.section
	margin-bottom $default-spacing-unit

p
	margin-bottom $default-spacing-unit

h1
	font-size 30px
	margin-bottom $default-spacing-unit
	font-weight 400

h2
	font-size 24px
	margin-bottom $default-spacing-unit
	font-weight 400

h3
	font-size 18px
	margin-bottom $default-spacing-unit
	font-weight 300
