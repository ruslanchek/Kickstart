input[type="text"],
input[type="email"],
input[type="password"],
textarea
	box-sizing border-box
	padding 8px 15px 10px
	min-height 45px
	border-radius $border-radius
	border 1px solid $color-gray - 20
	font-size $font-size
	font-family $font-family
	outline none
	transition border-color .2s, color .2s, background-color .2s, box-shadow .2s
	width 100%
	display block
	color $color-gray-dk - 20

	+placeholder()
		color $color-gray - 20
		transition color .2s

	&:disabled
		opacity .75
		background-color $color-gray-lt
		border-color $color-gray-lt !important

		+placeholder()
			color #fff !important

	&:hover
		border-color $color-gray - 40

		+placeholder()
			color $color-gray - 20

	&:focus
		border-color $color-blue-lt
		color $color-dark

textarea
	padding-top 10px


input[type="checkbox"]
	$size = 20px

	visibility hidden
	opacity 0
	position absolute

	&+label
		cursor pointer
		position relative
		padding-left $size * 1.5
		z-index 1

		&:before
			box-sizing border-box
			position absolute
			top -1px
			left 0
			content ''
			width $size
			height $size
			display inline-block
			border-radius 4px
			border 2px solid $color-gray - 15
			transition .15s

		&:after
			box-sizing border-box
			position absolute
			top 4px
			left 5px
			content ''
			width $size - 10
			height $size - 10
			border-radius 3px
			background-color $color-blue
			opacity 0
			transform scale(0)
			transition .15s

		&:hover
			&:before
				border-color $color-gray - 35

	&.error
		&+label
			&:before
				border-color $color-red

			&:hover
				&:before
					border-color $color-red - 35

	&:checked
		&+label
			&:before
				border-color $color-blue

			&:after
				opacity 1
				transform scale(1)

			&:hover
				&:before
					border-color $color-blue - 15

				&:after
					background-color $color-blue - 15

input[type="radio"]
	$size = 20px

	visibility hidden
	opacity 0
	position absolute

	&+label
		cursor pointer
		position relative
		padding-left $size * 1.5
		margin-right $default-spacing-unit
		margin-top 12px
		display inline-block
		z-index 1

		&:before
			box-sizing border-box
			position absolute
			top 1px
			left 0
			content ''
			width $size
			height $size
			display inline-block
			border-radius $size
			border 2px solid $color-gray - 15
			transition .15s

		&:after
			box-sizing border-box
			position absolute
			top 6px
			left 5px
			content ''
			width $size - 10
			height $size - 10
			border-radius $size - 4
			background-color $color-blue
			opacity 0
			transform scale(0)
			transition .15s

		&:hover
			&:before
				border-color $color-gray - 35

	&:checked
		&+label
			cursor default

			&:before
				border 2px solid $color-blue

			&:after
				opacity 1
				transform scale(1)
