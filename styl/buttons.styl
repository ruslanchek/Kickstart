.btn
    cursor pointer
    background-color $color-gray
    display inline-block
    vertical-align middle
    padding 0 30px
    border none
    color #fff
    outline none
    line-height 45px
    height 45px
    text-align center
    font-size $font-size
    font-family $font-family
    border-radius 5px
    position relative
    white-shace nowrap
    overflow hidden
    box-shadow inset 0 -3px 0 rgba(0, 0, 0, .1)
    transition .2s
    user-select none

    &.green
        background-color $color-green-lt

    &.blue
        background-color $color-blue-lt

    &.red
        background-color $color-red-lt

    &.yellow
        background-color $color-yellow-lt

    &.purple
        background-color $color-purple

    &.orange
        background-color $color-orange

    &.flat
        box-shadow none

    &:before
        content ''
        position absolute
        top 50%
        left 50%
        margin-top -25px
        margin-left -25px
        width 50px
        height 50px
        background #fff
        transition .2s
        opacity 0
        border-radius 125px
        transform scale(0)
        display block
        animation active-button 1.5s 1

    &:after
        content ''
        position absolute
        top 0
        left 0
        width 100%
        height 100%
        display block
        background-color #fff
        opacity 0
        transition .2s

    &:hover
        color #fff
        
        &:after
            opacity .2

    &:active
        transform translateY(1px) scale(.997)

        &:before
            animation-name active-button-reflow

    &:disabled,
    &.disabled
        opacity .4
        pointer-events none

    &.loading
        pointer-events none

        &:before
            border-radius 0
            transform scale(1) translateX(-300%)
            opacity .7
            animation loading-button .75s infinite

    @keyframes active-button-reflow
        to
            width auto

    @keyframes active-button
        0%
            transform scale(0)
            opacity 0

        1%
            transform scale(0)
            opacity .5

        20%
            transform scale(4)
            opacity .3

        100%
            transform scale(4)
            opacity 0

    @keyframes loading-button
        0%
            transform scale(1) translateX(-300%)
            opacity 0

        99.99%
            transform scale(1) translateX(300%)
            opacity .8

        100%
            transform scale(1) translateX(-300%)
            opacity 0
