@import url('http://fonts.googleapis.com/css?family=Roboto:400,100,100italic,300,300italic,400italic,500,500italic,700,700italic,900,900italic&subset=latin,cyrillic,greek')
@import 'jeet'
@import 'nib'
@import 'lib/reset'
@import 'lib/rupture'

$color-gray = #D6E1E5
$color-gray-lt = #DEE7EA
$color-gray-dk = #93A4AA

$color-blue = #17B9F0
$color-blue-lt = #3BC7F3
$color-blue-dk = #119CCB

$color-red = #F74A4C
$color-red-lt = #F86D6E
$color-red-dk = #CB1216

$color-yellow = #FAD46B
$color-yellow-lt = #FBDD8E
$color-yellow-dk = #F2BD6B

$color-green = #42B4AB
$color-green-lt = #7BC6C0
$color-green-dk = #28948C

$color-purple = #A88CD3
$color-purple-dk = #9175BB

$color-orange = #F28529
$color-orange-dk = #E8661F

$color-dark = #364347
$font-size = 14px
$font-family = 'Roboto', sans-serif

body
    font-family $font-family

a
    text-decoration none
    color $color-blue

.project
    width 960px
    margin 0 auto
    padding 30px
    min-height 500px
    background white

.block
    margin-bottom 60px

.section
    margin-bottom 20px

.btn
    cursor pointer
    background-color $color-gray
    display inline-block
    vertical-align middle
    padding 0 30px
    border none
    color #fff
    outline none
    line-height 45px
    height 45px
    text-align center
    font-size $font-size
    font-family $font-family
    border-radius 5px
    position relative
    white-shace nowrap
    overflow hidden
    box-shadow inset 0 -2px 0 rgba(0, 0, 0, .075)
    transition .2s

    &.green
        background-color $color-green-lt

    &.blue
        background-color $color-blue-lt

    &.red
        background-color $color-red-lt

    &.yellow
        background-color $color-yellow-lt

    &.purple
        background-color $color-purple

    &.orange
        background-color $color-orange

    &.flat
        box-shadow none

    &:before
        content ''
        position absolute
        top 50%
        left 50%
        margin-top -25px
        margin-left -25px
        width 50px
        background #fff
        transition .2s
        opacity 0
        height 50px
        border-radius 125px
        transform scale(0)

    &:hover
        &:before
            transform scale(4)
            opacity .35

    &:active
        transform translateY(1px)
