						.col-6 6
						.col-12 12
						.col-6 6
					
					.grid
						.col-12 12
						.col-12 12
						
					.grid
						.col-24 24
						
			hr
			
			.block
				h2 Forms
				
				form.form.columnar
					fieldset
						legend Columnar form
						
						.row
							label.title Name
							.item
								input(type="text", placeholder="Your name here")
							
						.row
							label.title E-mail
							.item
								input(type="text", disabled, value="Disabled field")
								
						.row
							label.title Phone
							.item
								input(type="text", readonly, value="Readonly field")
								
						.row
							label.title Gender
							.item
								input#radio-1(type="radio", name="radio-1", value="1", checked)
								label(for="radio-1") Male
								
								input#radio-2(type="radio", name="radio-1", value="2")
								label(for="radio-2") Female

						.row
							label.title 
							.item
								button.btn.blue(type="submit") Send it

			.block
				form.form
					fieldset
						legend Linear form
						
						.grid
							.col-6
							.col-12
								.row
									label.title Error here
									.item
										input.error(type="text", placeholder="Tpye your nickname")
									
								.row
									label.title Message
									.item
										textarea(rows="3")
										
								.row
									label.title Select realm
									.item
										.select
											select
												option North America
												option South America
												option Europe
												option Asia
												option Oceania
												option South Africa
										
								.row
									label.title
									.item
										input#checkbox-1(type="checkbox")
										label(for="checkbox-1") Check me, baby

								.row
									label.title 
									.item
										button.btn.blue(type="submit") Send it
							.col-6
