						.col-6 6
						.col-6 6
						
			.block
				h2 Forms
				
				form.form.columnar
					fieldset
						legend Columnar form
						
						.row
							label.title Name
							.item
								input(type="text", placeholder="Your name here")
							
						.row
							label.title E-mail
							.item
								input(type="text", disabled, value="Disabled field")
								
						.row
							label.title Phone
							.item
								input(type="text", readonly, value="Readonly field")
								
						.row
							label.title Message
							.item
								textarea(rows="3")

						.row
							label.title 
							.item
								button.btn.blue(type="submit") Send it

